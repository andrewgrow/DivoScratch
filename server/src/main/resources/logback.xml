<configuration>
    <property name="LOG_LEVEL" value="${LOG_LEVEL:-INFO}" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} %-5level X-Request-ID: %X{callId} -> %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.ktor.server.routing.Routing" level="WARN" />
    <logger name="io.ktor" level="${LOG_LEVEL}" />
    <logger name="Application" level="${LOG_LEVEL}" />
    <logger name="io.netty" level="${LOG_LEVEL}"/>

    <root level="${LOG_LEVEL}">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>